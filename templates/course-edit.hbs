<h1>Редактирование {{course.title}}</h1>

<form class="course-form" method="post" action="/courses/edit">
    <div class="input-field">
        <input id="title" name="title" value="{{course.title}}" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название курса"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" value="{{course.price}}" type="number" class="validate" required min="1">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input id="image" name="img" value="{{course.img}}" type="text" class="validate" required>
        <label for="image">URL изображения</label>
        <span class="helper-text" data-error="Введите URL изображения"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary" type="submit">Редактировать курс</button>
</form>

<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn red">Удалить курс</button>
</form>